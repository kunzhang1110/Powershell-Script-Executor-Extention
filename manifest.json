{
  "name": "PowerShell Executor",
  "manifest_version": 2,
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "nativeMessaging", "scripting"],
  "icons": {
    "16": "icons/play16x16.png",
    "32": "icons/play32x32.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
